        $block.removeClass('active');
        $videoContainer.removeClass('active');
        player.api('unload');

        transitionEnd($videoContainer[0]).bind(function(event){
            $block.removeClass('hide-inner');
            transitionEnd($videoContainer[0]).unbind();
        });
    }
};

